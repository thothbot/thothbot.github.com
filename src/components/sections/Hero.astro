---
import Section from '../layout/Section.astro';
import CTAButton from '../ui/CTAButton.astro';
import NameSvg from '../common/NameSvg.astro';
---

<Section id="hero" class="overflow-hidden">
  <div class="h-full flex flex-col md:flex-row">
    <div class="relative h-[25vh] md:h-full w-full md:w-1/2">
      <div id="hero-canvas" class="absolute inset-0 z-0"></div>
    </div>

    <div class="relative z-10 flex-1 md:w-1/2 flex items-start md:items-center justify-center md:justify-start px-4 sm:px-6 md:pl-10 lg:pl-16 pt-6 md:pt-0 pb-16">
      <div class="max-w-lg text-center md:text-left">
        <h1 class="mb-4 leading-tight">
          <NameSvg size="hero" />
        </h1>
        <p class="text-xl md:text-2xl text-white/70 mb-6">
          Software Architect
        </p>
        <p class="text-base text-white/50 mb-8 leading-relaxed">
          Building AI systems and cloud platforms that ship.<br class="hidden md:block" />
          From prototype to millions of users.
        </p>

        <div class="flex justify-center md:justify-start">
          <CTAButton href="#footer" variant="secondary">Get in Touch</CTAButton>
        </div>

        <div class="w-full h-px bg-gradient-to-r from-white/20 via-white/10 to-transparent my-12"></div>

        <div class="hero-links flex flex-wrap justify-center md:justify-start items-center gap-x-6 gap-y-2">
          <a href="#geneease" class="group" aria-label="GeneEase Project">
            <img src="/assets/images/geneease-logo.svg" alt="GeneEase" class="h-8 opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all" />
          </a>
          <a href="#orbesg" class="group" aria-label="OrbESG Project">
            <img src="/assets/images/orbesg-logo.svg" alt="OrbESG" class="h-6 opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all -mt-[5px]" />
          </a>
          <a href="#parallax" class="group" aria-label="Parallax Project">
            <img src="/assets/images/parallax-logo.png" alt="Parallax" class="h-8 opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all" />
          </a>
        </div>

        <div class="hero-presentation flex flex-col items-center md:items-start mt-6">
          <span class="text-xs text-white/50 uppercase tracking-wider mb-2">Presentation</span>
          <a href="/presentation/ai-coding/" class="group flex items-center gap-1.5 opacity-80 hover:opacity-100 hover:scale-105 transition-all">
            <svg class="w-3.5 h-3.5 text-violet-500 group-hover:text-violet-400 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="5 3 19 12 5 21 5 3" />
            </svg>
            <span class="text-sm text-white/80 group-hover:text-white transition-colors">AI Coding Workflows</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce z-20">
    <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</Section>

<style>
  .hero-links {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.5s forwards;
  }

  .hero-presentation {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.7s forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
