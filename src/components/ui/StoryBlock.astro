---
interface Props {
  type: 'problem' | 'solution' | 'result';
  title?: string;
}

const { type, title } = Astro.props;

const config = {
  problem: {
    defaultTitle: 'Challenge',
  },
  solution: {
    defaultTitle: 'Solution',
  },
  result: {
    defaultTitle: 'Impact',
  },
};

const { defaultTitle } = config[type];
---

<div class="liquid-glass rounded-2xl p-6">
  <h4 class="text-lg font-semibold text-white mb-3">{title || defaultTitle}</h4>
  <div class="text-white/70 leading-relaxed">
    <slot />
  </div>
</div>
